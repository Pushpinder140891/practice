<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.bb.km</groupId>
  <artifactId>liquibase</artifactId>
  <version>develop</version>

  <properties>
    <liquibase.properties></liquibase.properties>
    <liquibase.contexts></liquibase.contexts>
  </properties>

  <dependencies>

    <!-- https://mvnrepository.com/artifact/org.liquibase/liquibase-core -->
    <dependency>
      <groupId>org.liquibase</groupId>
      <artifactId>liquibase-core</artifactId>
      <version>4.23.1</version>
    </dependency>

    <!-- https://mvnrepository.com/artifact/mysql/mysql-connector-java -->
    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
      <version>8.0.33</version>
    </dependency>

  </dependencies>


  <build>

    <plugins>

      <plugin>
        <groupId>com.google.code.maven-replacer-plugin</groupId>
        <artifactId>replacer</artifactId>
        <version>1.5.2</version>
        <executions>
          <execution>
            <phase>initialize</phase>
            <goals>
              <goal>replace</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <basedir>${project.basedir}</basedir>
          <includes>
            <include>liquibase.properties</include>
          </includes>
          <replacements>
            <replacement>
              <token>%database.url%</token>
              <value>${database.url}</value>
            </replacement>
            <replacement>
              <token>%database.username%</token>
              <value>${database.username}</value>
            </replacement>
            <replacement>
              <token>%database.password%</token>
              <value>${database.password}</value>
            </replacement>
          </replacements>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.liquibase</groupId>
        <artifactId>liquibase-maven-plugin</artifactId>
        <version>4.23.1</version>
        <executions>
          <execution>
            <id>releaseLocks</id>
            <phase>process-resources</phase>
            <configuration>
              <propertyFile>${liquibase.properties}</propertyFile>
              <promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
            </configuration>
            <goals>
              <goal>releaseLocks</goal>
            </goals>
          </execution>
          <execution>
            <id>updateRollback</id>
            <phase>process-resources</phase>
            <configuration>
              <propertyFile>${liquibase.properties}</propertyFile>
              <contexts>${liquibase.contexts}</contexts>
              <promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
            </configuration>
            <goals>
              <goal>${liquibase.goal}</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

  <profiles>
    <profile>
      <id>default</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <database.url>jdbc:postgresql://localhost:3306/DEVDB</database.url>
        <database.username>root</database.username>
        <database.password>mysql</database.password>
      </properties>
    </profile>
  </profiles>

</project>
